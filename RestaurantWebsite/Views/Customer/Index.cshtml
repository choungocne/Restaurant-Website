@model RestaurantWebsite.Models.Customer
@using RestaurantWebsite.Models

@{
    ViewData["Title"] = "Hồ sơ khách hàng";
}

<h2>Hồ sơ khách hàng</h2>

@if (TempData["Success"] != null)
{
    <div class="alert alert-success">@TempData["Success"]</div>
}

<div class="card">
    <div class="card-body">
        <h4 class="card-title">@Model.CustomerName</h4>
        <dl class="row">
            <dt class="col-sm-3">Số điện thoại</dt>
            <dd class="col-sm-9">@Model.PhoneNumber</dd>
            <dt class="col-sm-3">Email</dt>
            <dt class="col-sm-3">Địa chỉ</dt>
            <dd class="col-sm-9">@Model.Address</dd>
        </dl>
        <div>
            <a asp-action="Edit" class="btn btn-primary">Chỉnh sửa hồ sơ</a>
            <a asp-action="Delete" class="btn btn-danger">Xóa tài khoản</a>
        </div>
    </div>
</div>
