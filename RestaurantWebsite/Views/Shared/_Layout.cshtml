            </nav>
            <ul class="navbar-nav">
                @if (User.Identity.IsAuthenticated)
                {
                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle"  id="navbarDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                            Xin chào @User.Identity.Name!
                        </a>
                        <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="navbarDropdown">
                            @if (User.IsInRole("Admin"))
                            {
                                <li><a class="dropdown-item" asp-area="" asp-controller="Admin" asp-action="Index">Quản trị viên</a></li>
                                <li><hr class="dropdown-divider"></li>
                            }
                            @if (User.IsInRole("Employee"))
                            {
                                <li><a class="dropdown-item" asp-area="" asp-controller="Employee" asp-action="Dashboard">Nhân viên</a></li>
                                <li><hr class="dropdown-divider"></li>
                            }
                            <li><a class="dropdown-item" asp-area="" asp-controller="CustomerProfile" asp-action="Index">Hồ sơ của tôi</a></li>
                            <li><a class="dropdown-item" asp-controller="CustomerProfile" asp-action="MyReservations">Đơn hàng của tôi</a></li>
                            <li><hr class="dropdown-divider"></li>
                            <li>
                                <form class="form-inline" asp-area="" asp-controller="Auth" asp-action="Logout" method="post">
                                    <button type="submit" class="dropdown-item">Đăng xuất</button>
                                </form>
                            </li>
                        </ul>
                    </li>
                }
                else
                {

                    <li class="nav-item">
                        <a class="nav-link text-dark" asp-area="" asp-controller="Auth" asp-action="Login">Đăng nhập</a>
                    </li>
                }
            </ul>

            <a class="btn-getstarted" href="/Reservation/Create">Đặt Lịch</a>

