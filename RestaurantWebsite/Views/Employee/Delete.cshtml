@model RestaurantWebsite.Models.Employee

@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="utf-8" />
    <title>Chi tiết nhân viên</title>

    <link href="~/vendor/bootstrap/css/bootstrap.min.css" rel="stylesheet" />
    <link href="~/vendor/bootstrap-icons/bootstrap-icons.css" rel="stylesheet" />
    <link href="~/css/main.css" rel="stylesheet" />
</head>
<body>
    <h2>Are you sure you want to delete this employee?</h2>
<div>
    <strong>Name:</strong> @Model.FullName<br />
    <strong>BirthDate:</strong> @Model.BirthDate.ToShortDateString()<br />
    <strong>Phone:</strong> @Model.PhoneNumber
</div>
<form asp-action="Delete" method="post">
    <input type="hidden" asp-for="EmployeeId" />
    <button type="submit">Delete</button>
    <a asp-action="Index">Cancel</a>
</form>
    <script src="~/vendor/bootstrap/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/main.js"></script>

</body>
</html>