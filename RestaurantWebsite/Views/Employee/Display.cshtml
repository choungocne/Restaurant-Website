@model RestaurantWebsite.Models.Employee

@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="utf-8" />
    <title>Chi tiết nhân viên</title>

    <link href="~/vendor/bootstrap/css/bootstrap.min.css" rel="stylesheet" />
    <link href="~/vendor/bootstrap-icons/bootstrap-icons.css" rel="stylesheet" />
    <link href="~/css/main.css" rel="stylesheet" />
</head>
<body>

    <div class="container mt-4">
        <h2>Chi tiết nhân viên</h2>

        <div class="row">
            <div class="col-md-4">
                @if (!string.IsNullOrEmpty(Model.Img))
                {
                    <img src="~/img/chefs/@Model.Img" alt="@Model.FullName" class="img-fluid rounded" style="max-height: 300px;" />
                }
                else
                {
                    <div class="text-center p-5 bg-light">
                        <span>Không có hình ảnh</span>
                    </div>
                }
            </div>
            <div class="col-md-8">
                <dl class="row">
                    <dt class="col-sm-3">Mã nhân viên</dt>
                    <dd class="col-sm-9">@Model.EmployeeId</dd>

                    <dt class="col-sm-3">Họ và tên</dt>
                    <dd class="col-sm-9">@Model.FullName</dd>

                    <dt class="col-sm-3">Ngày sinh</dt>
                    <dd class="col-sm-9">@Model.BirthDate.ToString("dd/MM/yyyy")</dd>

                    <dt class="col-sm-3">Số điện thoại</dt>
                    <dd class="col-sm-9">@Model.PhoneNumber</dd>

                    <dt class="col-sm-3">Chi tiết</dt>
                    <dd class="col-sm-9">@Model.Detail</dd>
                </dl>

                <div class="mt-3">
                    <a asp-action="Update" asp-route-id="@Model.EmployeeId" class="btn btn-warning">Chỉnh sửa</a>
                    <a asp-action="Index" class="btn btn-secondary">Quay lại danh sách</a>
                </div>
            </div>
        </div>
    </div>

    <script src="~/vendor/bootstrap/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/main.js"></script>

</body>
</html>
