@model IEnumerable<RestaurantWebsite.Models.Employee>

@{
    ViewData["Title"] = "Danh sách nhân viên";
}

<div class="container py-5">
    

    <div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 g-4">
        @if (Model != null && Model.Any())
        {
            @foreach (var emp in Model)
            {
                <div class="col">
                    <div class="card h-100 shadow-sm">
                        @if (!string.IsNullOrEmpty(emp.Img))
                        {
                            <img src="~/img/chefs/@emp.Img" class="card-img-top" alt="@emp.FullName" style="object-fit: cover; height: 300px;" />
                        }
                        else
                        {
                            <div class="bg-secondary text-white d-flex align-items-center justify-content-center" style="height:200px;">
                                <i class="bi bi-person-circle fs-1"></i>
                            </div>
                        }

                        <div class="card-body d-flex flex-column">
                            <h5 class="card-title">@emp.FullName</h5>
                            <p class="card-text mb-1">
                                <i class="bi bi-calendar-event me-1"></i>
                                @emp.BirthDate.ToString("dd/MM/yyyy")
                            </p>
                            <p class="card-text mb-3">
                                <i class="bi bi-telephone me-1"></i>
                                @(string.IsNullOrEmpty(emp.PhoneNumber) ? "N/A" : emp.PhoneNumber)
                            </p>
                          
                        </div>
                    </div>
                </div>
            }
        }
        else
        {
            <div class="col-12">
                <div class="alert alert-info text-center mb-0">
                    Không có dữ liệu nhân viên
                </div>
            </div>
        }
    </div>
</div>

@section Scripts {
    <script src="~/vendor/bootstrap/js/bootstrap.bundle.min.js"></script>
}
