             @foreach (var t in Model.DiningTables.Take(3))
                {
                    <div class="col-lg-4 col-md-6" data-aos="fade-up" data-aos-delay="100">
                        <div class="member">
                           
                                <img src="~/img/table/@t.Img" class="card-img-top" alt="@t.TableName" style="object-fit: cover; height: 300px;" />
                           
                            <div class="member-info">
                                <h4>@t.TableName</h4>
