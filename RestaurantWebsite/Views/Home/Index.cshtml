<!-- Menu Section -->
<section id="menu" class="menu section">
    <div class="container section-title" data-aos="fade-up">
        <h2>Danh sách món ăn</h2>
        <p><span>Thực đơn</span> <span class="description-title">của Yummy</span></p>
    </div>

    <div class="container">  


        <div class="tab-content" data-aos="fade-up" data-aos-delay="200">
          
            <div class="tab-pane fade active show" id="menu-starters">
                <div class="tab-header text-center">
                   
                </div>
                <div class="row gy-5">
                    @if (Model.Dishes != null && Model.Dishes.Any())
                    {
                        @foreach (var dish in Model.Dishes.Take(3))
                        {
                            <div class="col-lg-4 menu-item">
                                @if (!string.IsNullOrEmpty(dish.Img))
                                {
                                    <a href="~/img/menu/@dish.Img" class="glightbox"><img src="~/img/menu/@dish.Img" class="menu-img img-fluid" alt="@dish.DishName"></a>
                                }
                                else
                                {
                                    <img src="/img/menu/default.jpg" class="menu-img img-fluid" alt="No Image">
                                }
                                <h4>@dish.DishName</h4>
@*                                 <p class="ingredients">@dish.Category.CategoryName</p>
 *@                                <p class="price">$@dish.UnitPrice.ToString("F2")</p>
                            </div>
                           
                        }

                    }
                    else
                    {
                        <div class="col-12 text-center text-red-600">Không có món ăn nào trong danh mục Starters.</div>
                    }
                </div>
            </div>
         
        </div>
    </div>
