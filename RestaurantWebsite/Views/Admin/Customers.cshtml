@model IEnumerable<RestaurantWebsite.Models.Customer>
@{
    ViewData["Title"] = "Danh sách khách hàng";
    Layout = "_AdminLayout";
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Danh sách khách hàng</title>
    <style>
        body {
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            background-color: #e0e0e0;
            margin: 0;
            padding: 20px;
        }

        h2 {
            color: #333;
            text-align: center;
            margin-bottom: 30px;
            font-size: 28px;
            font-weight: 600;
        }

        .add-new {
            display: inline-block;
            margin-bottom: 20px;
            padding: 10px 20px;
            background-color: #6c757d;
            color: #fff;
            text-decoration: none;
            border-radius: 5px;
            transition: background-color 0.3s;
        }

            .add-new:hover {
                background-color: #5a6268;
            }

        .table-container {
            max-width: 1200px;
            margin: 0 auto;
            background: #fff;
            border-radius: 10px;
            box-shadow: 0 4px 20px rgba(0, 0, 0, 0.1);
            overflow: hidden;
        }

        table {
            width: 100%;
            border-collapse: collapse;
            font-size: 16px;
        }

        thead {
            background-color: #6c757d;
            color: #fff;
        }

        th, td {
            padding: 15px;
            text-align: left;
            border-bottom: 1px solid #d3d3d3;
        }

        th {
            font-weight: 600;
            text-transform: uppercase;
        }

        tbody tr {
            transition: background-color 0.3s;
        }

            tbody tr:hover {
                background-color: #d3d3d3;
            }

        td {
            color: #555;
        }

        .actions a {
            color: #6c757d;
            text-decoration: none;
            padding: 8px 12px;
            border: 1px solid #6c757d;
            border-radius: 5px;
            transition: all 0.3s;
            margin-right: 5px;
        }

            .actions a:hover {
                background-color: #6c757d;
                color: #fff;
            }

            .actions a.delete {
                border-color: #dc3545;
                color: #dc3545;
            }

                .actions a.delete:hover {
                    background-color: #dc3545;
                    color: #fff;
                }
        @@media (max-width: 768px) {
            table

        {
            font-size: 14px;
        }

        th, td {
            padding: 10px;
        }

        .actions a {
            padding: 6px 8px;
            font-size: 12px;
        }

        .add-new {
            padding: 8px 16px;
            font-size: 14px;
        }

        }
    </style>
</head>
<body>
    <h2>Danh sách khách hàng</h2>
    <div class="table-container">
        <table>
            <thead>
                <tr>
                    <th>Mã KH</th>
                    <th>Tên</th>
                    <th>Số điện thoại</th>
                    <th>Hành động</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var c in Model)
                {
                    <tr>
                        <td>@c.CustomerId</td>
                        <td>@c.CustomerName</td>
                        <td>@c.PhoneNumber</td>
                        <td class="actions">
                            <a asp-action="DeleteCustomer" asp-route-id="@c.CustomerId" class="delete">Xóa</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</body>
</html>