@model RestaurantWebsite.Models.Customer

@{
    ViewData["Title"] = "Thông tin cá nhân";
}

<div class="container">
    <h2>Hồ sơ khách hàng</h2>

    <div class="row">
        <div class="col-md-4">
            @if (!string.IsNullOrEmpty(Model.Img))
            {
                <img src="@Model.Img" alt="Ảnh đại diện" class="img-thumbnail mb-3" style="max-width: 200px;" />
            }
            else
            {
                <img src="~/img/img-default.jpg" alt="Ảnh đại diện mặc định" class="img-thumbnail mb-3" style="max-width: 200px;" />
            }
        </div>

        <div class="col-md-8">
            <div class="card">
                <div class="card-header d-flex justify-content-between align-items-center">
                    <h5>Thông tin cá nhân</h5>
                    <a asp-action="Edit" class="btn btn-primary" style="background-color:gray;">Cập nhật thông tin</a>
                </div>
                <div class="card-body">
                    <dl class="row">
                        <dt class="col-sm-4">Họ và tên:</dt>
                        <dd class="col-sm-8">@Model.CustomerName</dd>

                        <dt class="col-sm-4">Địa chỉ:</dt>
                        <dd class="col-sm-8">@(Model.Address ?? "Chưa cập nhật")</dd>

                        <dt class="col-sm-4">Số điện thoại:</dt>
                        <dd class="col-sm-8">@(Model.PhoneNumber ?? "Chưa cập nhật")</dd>

                        <dt class="col-sm-4">Ngày sinh:</dt>
                        <dd class="col-sm-8">
                            @(Model.DateOfBirth.HasValue ? Model.DateOfBirth.Value.ToString("dd/MM/yyyy") : "Chưa cập nhật")
                        </dd>
                    </dl>

                    <div class="mt-3">
                        <a asp-action="ChangePassword" class="btn btn-outline-secondary">Đổi mật khẩu</a>
                    </div>
                </div>
            </div>

        </div>
    </div>
</div>