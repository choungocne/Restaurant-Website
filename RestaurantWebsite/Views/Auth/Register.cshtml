@model RestaurantWebsite.ViewModels.RegisterViewModel
@{
    ViewData["Title"] = "Đăng ký";
    Layout = null;
}
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta content="width=device-width, initial-scale=1" name="viewport" />
    <title>
        Register
    </title>
    <script src="https://cdn.tailwindcss.com">
    </script>
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css" rel="stylesheet" />
</head>
<body class="bg-white min-h-screen flex items-center justify-center p-6">
    <div class="max-w-6xl w-full flex flex-col md:flex-row items-center md:items-start gap-12">
        <div class="flex-shrink-0 w-full md:w-1/2 flex justify-center md:justify-start">
            <img alt="Illustration of a girl standing next to a large smartphone with a keyhole and a key in her hand, surrounded by minimal plants and abstract shapes" class="max-w-full h-auto" height="400" src="https://storage.googleapis.com/a1aa/image/742827d7-58c2-4ff2-42a3-64fc2ad0fcee.jpg" width="400" />
        </div>
        <div class="bg-white shadow-md rounded-lg max-w-4xl w-full">
            <div class="card-body p-8">
                <form action="#" method="post" class="space-y-6">
                    <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                        <div>
                            <label asp-for="FullName" class="block mb-1 font-semibold text-gray-700">Full Name</label>
                            <input asp-for="FullName" type="text" class="form-control w-full border border-gray-300 rounded-md px-4 py-2 focus:outline-none focus:ring-2 focus:ring-blue-600" />
                            <span asp-validation-for="FullName" class="text-danger text-red-600 text-sm mt-1 block"></span>
                        </div>
                        <div>
                            <label asp-for="Username" class="block mb-1 font-semibold text-gray-700">Username</label>
                            <input asp-for="Username" type="text" class="form-control w-full border border-gray-300 rounded-md px-4 py-2 focus:outline-none focus:ring-2 focus:ring-blue-600" />
							<span asp-validation-for="Username" class=" text-danger text-red-600 text-sm mt-1 block"></span>
                        </div>
                    </div>

                    <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                        <div>
                            <label asp-for="Email" class="block mb-1 font-semibold text-gray-700">Email</label>
                            <input asp-for="Email" type="email" class="form-control w-full border border-gray-300 rounded-md px-4 py-2 focus:outline-none focus:ring-2 focus:ring-blue-600" />
                            <span asp-validation-for="Email" class="text-danger text-red-600 text-sm mt-1 block"></span>
                        </div>
                        <div>
                            <label asp-for="PhoneNumber" class="block mb-1 font-semibold text-gray-700">Phone Number</label>
                            <input asp-for="PhoneNumber" type="tel" class="form-control w-full border border-gray-300 rounded-md px-4 py-2 focus:outline-none focus:ring-2 focus:ring-blue-600" />
                            <span asp-validation-for="PhoneNumber" class="text-danger text-red-600 text-sm mt-1 block"></span>
                        </div>
                    </div>

                    <div>
                        <label asp-for="Address" class="block mb-1 font-semibold text-gray-700">Address</label>
                        <textarea asp-for="Address" rows="2" class="form-control w-full border border-gray-300 rounded-md px-4 py-2 focus:outline-none focus:ring-2 focus:ring-blue-600"></textarea>
                        <span asp-validation-for="Address" class="text-danger text-red-600 text-sm mt-1 block"></span>
                    </div>

                    <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                        <div>
                            <label asp-for="Password" class="block mb-1 font-semibold text-gray-700">Password</label>
                            <input asp-for="Password" type="password" class="form-control w-full border border-gray-300 rounded-md px-4 py-2 focus:outline-none focus:ring-2 focus:ring-blue-600" />
							<span asp-validation-for="Password" class="text-danger text-red-600 text-sm mt-1 block"></span>
                        </div>
                        <div>
                            <label asp-for="ConfirmPassword" class="block mb-1 font-semibold text-gray-700">Confirm Password</label>
                            <input asp-for ="ConfirmPassword" type="password" class="form-control w-full border border-gray-300 rounded-md px-4 py-2 focus:outline-none focus:ring-2 focus:ring-blue-600" />
							<span asp-validation-for="ConfirmPassword" class="text-danger text-red-600 text-sm mt-1 block"></span>
                        </div>
                    </div>

                    <div class="form-group d-grid">
                        <button type="submit" class="btn btn-primary btn-lg w-full bg-blue-600 hover:bg-blue-700 text-white font-semibold py-3 rounded-md shadow-md focus:outline-none focus:ring-2 focus:ring-blue-600 focus:ring-offset-1">
                            Đăng ký
                        </button>
                    </div>
                </form>
            </div>
            <div class="card-footer text-center border-t border-gray-200 p-4 text-gray-700">
                <p class="mb-0">
                    Bạn đã có tài khoản? <a asp-action="Login" class="text-blue-600 hover:underline">Đăng nhập ngay</a>
                </p>
            </div>
        </div>
</body>
</html>


@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}